<?xml version="1.0" encoding="utf-8"?><!-- This linear layout contains a single item displayed in the MainActivity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    tools:context="com.example.kamstrup_site_specification.Sites.AddSiteActivity"
    android:background="@color/KamstrupWhite">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <!-- TextView that displays the projectName -->
        <TextView
            android:id="@+id/site_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Site Address"
            style="@style/text_comment"
            />

        <TextView
            android:id="@+id/taskUpdatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="11/11/1111"
            style="@style/sigineditTextView"
            android:textColor="@color/KamstrupBlack"/>



    </LinearLayout>


</LinearLayout>
